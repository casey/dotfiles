#!/usr/bin/env bash

set -euo pipefail

dir="${1:-"$HOME/bulk/files"}"
dir="${dir%/}"

mapfile -d '' files < <(find "$dir" -type f -iname '*.flac' -print0)

IFS=$'\n' flacs=($(sort <<<"${files[*]}"))
unset IFS

for i in "${!flacs[@]}"; do
  flac="${flacs[$i]}"

  echo -n "[$((i+1))/${#flacs[@]}] ${flac##*/}... "

  ffmpeg -hide_banner -loglevel error -y \
    -i "$flac" -codec:a libmp3lame -qscale:a 0 "${flac%.flac}.mp3"

  echo 'âœ…'
done
