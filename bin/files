#!/usr/bin/env bash

set -euxo pipefail

mkdir -p ~/bulk/files

rsync \
  --compress \
  --delete \
  --links \
  --partial-dir ~/tmp/files/ \
  --perms \
  --progress \
  --recursive \
  --times \
  --verbose \
  "$@" \
  magellan.whatbox.ca:files/ \
  ~/bulk/files/

rm -rf ~/tmp/files

rmdir ~/bulk/files 2> /dev/null

ssh rodarmor@magellan.whatbox.ca 'rm -f files/*.meta'
